<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="SubscriptionPU">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/finalDS</jta-data-source>
		<class>com.subscript.entities.Edition</class>
		<class>com.subscript.entities.Payment</class>
		<class>com.subscript.entities.Subscription</class>
		<class>com.subscript.entities.Type</class>
		<class>com.subscript.entities.User</class>
		<properties>
<!-- 			<property name="hibernate.hbm2ddl.auto" value="update" /> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.use_sql_comments" value="true"/>
		</properties>
	</persistence-unit>
</persistence>